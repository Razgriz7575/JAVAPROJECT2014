package Main;

import Personage.Personage;
//à faire: main(--level, --score, --create), loader fichier (classe table), 
public class Main {

	public static void main(String[] args) {
		
		Personage joueur = new Personage();
		Integer quitter=0;
		Integer LevelDeDepart=0;
		while (quitter!=1)
			{
				Integer choixMenu=0;
				if (args.length!=0)
					{
						if (args[0]=="level")
							{
								choixMenu=1;
									if (args[1]!=null)
										{
											LevelDeDepart=Integer.parseInt(args[1]);
										}		
							}
						else if (args[0]=="score")
							{
								choixMenu=2;
							}
						else if (args[0]=="create")
							{
								choixMenu=3;
							}
						else
							{
								choixMenu= Game.menuPrincipale();
							}
					}
				
				
				quitter=Game.lancementApplication (choixMenu); //cette ligne lance l'application choisie et retourne le choix de l'utilisateur si il a décidé de quitter l'application à la fin
			}
		

	}

}
